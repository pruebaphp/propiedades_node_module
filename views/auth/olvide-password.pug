extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-extrabold= pagina

        if errores  
         div(class="mx-auto max-w-md w-full my-10")
            each error in errores
                p(class="bg-red-500 uppercase text-white text-center font-bold rounded-lg py-2")= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-6.shadow-2xl.w-full.border
                form.space-y-5(id="formulario" method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Tu email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value=usuario? usuario.email : '')

                    div.text-end
                        a.text-blue-500.text-xs(href="/auth/login") Prefiero Iniciar Sesi√≥n    
                        

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-2 rounded-md uppercase text-white font-bold cursor-pointer" type="submit" value="Recuperar Password")