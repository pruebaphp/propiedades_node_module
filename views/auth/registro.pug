extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-3xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-500.rounded-md.border.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold(class="")=error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow-2xl.w-full
                form.space-y-5(id="formulario" method="POST" noValidate)
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="nombre") Tu nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Tu email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')

                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")

                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repetir_password") Repetir Password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repetir_password")

                    div.flex.items-center.justify-between
                        a.text-blue-500.text-xs(href="/auth/login") ¿Ya tienes una cuenta? Inicia Sesión     
                        a.text-blue-500.text-xs(href="/auth/olvide-password") Olvidé mi Password   

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 py-2 rounded-md uppercase text-white font-bold cursor-pointer" type="submit" value="Crear cuenta")